
<div class="card mt-4 py-4">
  <div class="card-body">
    <h3 class="card-title fs-1">
    <%= @friend.firts_name %>
    <%= @friend.last_name %>

    </h3>
    <p class="card-text fs-6">
      <%= @friend.email %> |
      <%= @friend.phone %> |
      <%= @friend.twitter %> |
    </p>
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
    <td><%= link_to 'Delete', @friend, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
  </div>
</div>


